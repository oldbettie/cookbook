<div class="show-content">
    <div class="secondary-nav">
            <h1><%= @recipe.name %></h1>
    
        <% if @current_user == @recipe.user || @recipe.user.admin? %>
            <div class="buttons">
                <%= link_to 'Edit', edit_recipe_path(@recipe)%>
                <%= link_to 'Delete', @recipe, :method => 'delete'%>
            </div>
        <% end %>
    </div>
    <img src="<%= @recipe.image %>" alt="<%= @recipe.name %>" class="img-show">
    <div class="lower-grid">
        <div class="lower-left">
            <br>
            <h3>Ingredients:</h3>
            <ul class="recipe-list">
                <% @ingredients_as_arr.each do |i| %>
                    <li><%= i%></li>
                <% end %>
            </ul>
        </div>
        <div class="lower-right">
            <br>
            <h3>Instructions:</h3>
            <p class="recipe-instructions"><%= @recipe.instructions %></p>
        </div>
    </div>
    <%= link_to 'Add Comment', new_comment_path, class: 'btn' %>
    <br>
    <div class="comment-container">
        <% @comment.each do |c| %>
                <% if c.recipe.id == @recipe.id %>
                    <div class="comment">
                        <div class="comment-header">
                            <h3><%= c.user.username %></h3>
                            <% if c.user.id == @current_user.id %>
                                <div class="buttons-container">
                                    <%= link_to 'Edit', edit_recipe_comment_path(c.id), class: "btn" %>
                                    <%= link_to 'Delete', c, method: 'delete', class: "btn" %>
                                </div>
                            <% end %>
                        </div>
                        <p><%= c.content %></p>
                    </div>
                    <br>
            <% end %>
        <% end %>
    </div>
</div>
